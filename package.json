{
  "name": "napoleon-game-4players",
  "version": "1.0.0",
  "description": "A web-based Napoleon card game for 4 players",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "npx @biomejs/biome check .",
    "lint:fix": "npx @biomejs/biome check --write .",
    "format": "npx @biomejs/biome format --write .",
    "format:check": "npx @biomejs/biome format .",
    "check": "npx @biomejs/biome check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "type-check:fast": "tsc --noEmit --skipLibCheck",
    "lint:fast": "npx @biomejs/biome check . --reporter=compact",
    "ci-check": "npm run lint && npm run type-check && npm run format:check && npm run format:other:check && npm test && npm run build",
    "ci-fix": "npm run lint:fix && npm run format && npm run format:other && npm run type-check && npm test",
    "format:other": "npx prettier --write \"**/*.{yml,yaml,md}\" --ignore-path .gitignore",
    "format:other:check": "npx prettier --check \"**/*.{yml,yaml,md}\" --ignore-path .gitignore",
    "prepare": "husky"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.56.0",
    "crypto-js": "^4.2.0",
    "next": "15.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "npx @biomejs/biome check --write",
      "npx @biomejs/biome format --write"
    ],
    "*.{yml,yaml,md}": [
      "npx prettier --write"
    ]
  }
}
