{
  "name": "napoleon-game-4players",
  "version": "1.0.0",
  "description": "A web-based Napoleon card game for 4 players",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "npx @biomejs/biome check .",
    "lint:fix": "npx @biomejs/biome check --write .",
    "format": "npx @biomejs/biome format --write .",
    "format:check": "npx @biomejs/biome format .",
    "test": "jest",
    "test:ci": "NEXT_PUBLIC_SUPABASE_URL=https://mock.supabase.co NEXT_PUBLIC_SUPABASE_ANON_KEY=mock_anon_key SUPABASE_SERVICE_ROLE_KEY=mock_service_role_key NODE_ENV=test jest --passWithNoTests --clearCache",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "node tests/setup-test-directories.js && playwright test",
    "test:e2e:headed": "node tests/setup-test-directories.js && playwright test --headed",
    "test:e2e:ui": "node tests/setup-test-directories.js && playwright test --ui",
    "test:e2e:debug": "node tests/setup-test-directories.js && playwright test --debug",
    "test:e2e:verbose": "node tests/setup-test-directories.js && playwright test --reporter=list",
    "test:e2e:progress": "node tests/setup-test-directories.js && playwright test --reporter=line",
    "test:e2e:detailed": "node tests/setup-test-directories.js && playwright test --reporter=html --headed --screenshot=on --video=on",
    "test:e2e:ci": "node tests/setup-test-directories.js && SKIP_E2E_TESTS=${SKIP_E2E_TESTS:-false} playwright test --config=playwright-ci.config.ts --max-failures=1",
    "test:e2e:ci:comprehensive": "node tests/setup-test-directories.js && playwright test --config=playwright-ci.config.ts --grep 'should complete a full game flow against AI' --reporter=line",
    "test:e2e:ci:full": "node tests/setup-test-directories.js && SKIP_E2E_TESTS=${SKIP_E2E_TESTS:-false} playwright test --config=playwright-ci.config.ts --reporter=html",
    "test:e2e:ci:local": "node tests/setup-test-directories.js && SKIP_E2E_TESTS=${SKIP_E2E_TESTS:-false} PLAYWRIGHT_SKIP_WEBSERVER=1 playwright test --config=playwright-ci.config.ts --reporter=line",
    "test:e2e:develop": "node tests/setup-test-directories.js && SKIP_E2E_TESTS=${SKIP_E2E_TESTS:-false} playwright test --config=playwright-develop.config.ts --reporter=line",
    "test:e2e:develop:full": "node tests/setup-test-directories.js && SKIP_E2E_TESTS=${SKIP_E2E_TESTS:-false} playwright test --config=playwright-develop.config.ts --reporter=html",
    "test:e2e:auto": "node scripts/run-e2e-with-server.js",
    "test:e2e:auto:basic": "node scripts/run-e2e-with-server.js basic.spec.ts",
    "test:e2e:auto:full": "node scripts/run-e2e-with-server.js --reporter=html",
    "test:e2e:report": "node scripts/generate-e2e-report.js",
    "test:e2e:html": "playwright show-report",
    "test:e2e:production": "node tests/setup-test-directories.js && SKIP_E2E_TESTS=${SKIP_E2E_TESTS:-false} PLAYWRIGHT_SKIP_WEBSERVER=1 playwright test --config=playwright-production.config.ts --reporter=line",
    "test:e2e:production:full": "node tests/setup-test-directories.js && SKIP_E2E_TESTS=${SKIP_E2E_TESTS:-false} PLAYWRIGHT_SKIP_WEBSERVER=1 playwright test --config=playwright-production.config.ts --reporter=html",
    "test:e2e:production:headed": "node tests/setup-test-directories.js && SKIP_E2E_TESTS=${SKIP_E2E_TESTS:-false} PLAYWRIGHT_SKIP_WEBSERVER=1 playwright test --config=playwright-production.config.ts --headed",
    "test:e2e:production:ui": "node tests/setup-test-directories.js && SKIP_E2E_TESTS=${SKIP_E2E_TESTS:-false} PLAYWRIGHT_SKIP_WEBSERVER=1 playwright test --config=playwright-production.config.ts --ui",
    "type-check": "tsc --noEmit",
    "type-check:fast": "tsc --noEmit --skipLibCheck",
    "lint:fast": "npx @biomejs/biome check . --reporter=compact",
    "ci-check": "pnpm lint && pnpm type-check && pnpm format:check && pnpm format:other:check && pnpm test && pnpm build",
    "ci-check:full": "pnpm ci-check && pnpm test:e2e:auto:full",
    "ci-fix": "pnpm lint:fix && pnpm format && pnpm format:other && pnpm type-check && pnpm test",
    "format:other": "npx prettier --write \"**/*.{yml,yaml,md}\" --ignore-path .gitignore",
    "format:other:check": "npx prettier --check \"**/*.{yml,yaml,md}\" --ignore-path .gitignore",
    "cleanup": "./scripts/post-merge-cleanup.sh",
    "cleanup:smart": "./scripts/smart-cleanup.sh",
    "cleanup:polling": "node scripts/auto-polling-cleanup.js",
    "setup:pre-commit": "node scripts/setup-pre-commit.js",
    "develop:protect": "node scripts/setup-develop-protection.js enable",
    "develop:unprotect": "node scripts/setup-develop-protection.js disable",
    "develop:status": "node scripts/setup-develop-protection.js status",
    "prepare": "husky"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.56.0",
    "crypto-js": "^4.2.0",
    "next": "15.4.8",
    "react": "^19.1.2",
    "react-dom": "^19.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "npx @biomejs/biome check --write",
      "npx @biomejs/biome format --write"
    ],
    "*.{yml,yaml,md}": [
      "npx prettier --write"
    ]
  }
}
